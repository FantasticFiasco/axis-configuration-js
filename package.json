{
  "name": "axis-configuration",
  "version": "2.0.0",
  "description": "A Node.js library written in TypeScript capable of configuring Axis Communication cameras.",
  "keywords": [
    "axis",
    "communications",
    "camera",
    "device",
    "configuration",
    "vapix"
  ],
  "homepage": "https://github.com/FantasticFiasco/axis-configuration",
  "repository": {
    "type": "git",
    "url": "https://github.com/FantasticFiasco/axis-configuration.git"
  },
  "bugs": {
    "url": "https://github.com/FantasticFiasco/axis-configuration/issues"
  },
  "author": "Mattias Kindborg <mattias.kindborg@gmail.com> (https://twitter.com/FantasticFiasco)",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "types": "./lib/index",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "clean": "rimraf \"./+(src|test)/**/*.+(d.ts|js|js.map)\" ./lib ./coverage",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "postbuild": "cpx \"./src/**/*.{d.ts,js}\" ./lib/",
    "prestart": "yarn run build",
    "start": "node ./src/server.js",
    "pretest": "yarn run build",
    "test": "mocha --recursive",
    "lint": "tslint \"./src/**/*.ts\" --exclude \"./**/*.d.ts\"",
    "precoverage": "yarn run build",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec --recursive",
    "postcoverage": "remap-istanbul --input coverage/coverage.json --type lcovonly --output coverage/lcov.info",
    "precoverage:publish": "yarn run coverage",
    "coverage:publish": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "prepack": "yarn run test && yarn run lint"
  },
  "dependencies": {
    "@fantasticfiasco/expect": "1.0.0",
    "cheerio": "1.0.0-rc.2",
    "lodash": "4.17.4",
    "request": "2.83.0",
    "request-promise-native": "1.0.5"
  },
  "devDependencies": {
    "@types/chai": "4.0.7",
    "@types/cheerio": "0.22.6",
    "@types/lodash": "4.14.86",
    "@types/mocha": "2.2.44",
    "@types/nock": "8.2.1",
    "@types/node": "8.0.53",
    "@types/request": "2.0.8",
    "@types/request-promise-native": "1.0.10",
    "chai": "4.1.2",
    "coveralls": "2.13.3",
    "cpx": "1.5.0",
    "istanbul": "0.4.5",
    "mocha": "4.0.1",
    "nock": "9.1.4",
    "remap-istanbul": "0.9.5",
    "rimraf": "2.6.2",
    "tslint": "5.8.0",
    "typescript": "2.6.2"
  }
}
